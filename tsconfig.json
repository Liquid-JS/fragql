{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2017",
        "moduleResolution": "node",
        "removeComments": true,
        "experimentalDecorators": true,
        "preserveConstEnums": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "outDir": "./dist",
        "declaration": true,
        "lib": [
            "esnext.asynciterable",
            "esnext",
            "dom",
            "dom.iterable"
        ]
    },
    "exclude": [
        "node_modules"
    ],
    "files": [
        "src/index.ts",
        "src/highlight.ts"
    ]
}